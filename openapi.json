      "Batch": {
        "type": "object",
        "required": ["id", "status", "createdAt"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "ID único del lote"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "processing", "completed", "failed"],
            "description": "Estado del lote"
          },
          "totalItems": {
            "type": "integer",
            "description": "Total de items en el lote"
          },
          "processedItems": {
            "type": "integer",
